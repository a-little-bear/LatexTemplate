\newcommand{\newcl}[3][]{\begin{claim}#1\label{cl#2}#3\end{claim}}
\newcommand{\newco}[3][]{\begin{corollary}#1\label{co#2}#3\end{corollary}}
\newcommand{\newt}[3][]{\begin{theorem}#1\label{t#2}#3\end{theorem}}
\newcommand{\neweg}[1]{\begin{example}#1\end{example}}
\newcommand{\newr}[1]{\begin{remark}#1\end{remark}}
