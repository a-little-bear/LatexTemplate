\ProvidesPackage{clsthm}
\NeedsTeXFormat{LaTeX2e}

\newtheorem{hint1}{Hint}
\newtheorem{question1}{Question}
\newtheorem{exercise1}{Exercise}
\newtheorem{definition1}{Definition}
\newtheorem{proposition1}{Proposition}
\newtheorem{lemma1}{Lemma}
\newtheorem{claim1}{Claim}
\newtheorem{corollary1}{Corollary}
\newtheorem{theorem1}{Theorem}
\newtheorem{example1}{Example}
\newtheorem{remark1}{Remark}
\newtheorem{proof1}{Proof}


\renewcommand{\newq}[2][]{\begin{question1}\label{q#1}#2\end{question1}}
\renewcommand{\newe}[2][]{\begin{exercise1}\label{e#1}#2\end{exercise1}}
\renewcommand{\newd}[2][]{\begin{definition1}\label{d#1}#2\end{definition1}}
\renewcommand{\newpp}[2][]{\begin{proposition1}\label{pp#1}#2\end{proposition1}}
\renewcommand{\newl}[2][]{\begin{lemma1}\label{l#1}#2\end{lemma1}}
\renewcommand{\newcl}[2][]{\begin{claim1}\label{cl#1}#2\end{claim1}}
\renewcommand{\newco}[2][]{\begin{corollary1}\label{co#1}#2\end{corollary1}}
\renewcommand{\newt}[2][]{\begin{theorem1}\label{t#1}#2\end{theorem1}}

\renewcommand{\neweg}[1]{\begin{example1}#1\end{example1}}
\renewcommand{\newr}[1]{\begin{remark1}#1\end{remark1}}
\renewcommand{\newh}[1]{\begin{hint1}#1\end{hint1}}
\renewcommand{\newp}[1]{\begin{proof1}#1\end{proof1}}

